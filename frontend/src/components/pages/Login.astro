---
import { LogInForm, type LogInFormTranslation } from '@/components/security/LogInForm'
import FormLayout from '@/layouts/FormLayout.astro'
import type { SeoTranslation } from '@/types'
import { getRelativeLocaleUrl } from 'astro:i18n'

interface Props {
   t: {
      seo: SeoTranslation
      accountQuestion: string
      signUp: string
      logInFormTranslation: LogInFormTranslation
   }
}

const { t } = Astro.props
---

<FormLayout 
   title={t.seo.title}
   description={t.seo.description}
   h1Text={t.seo.h1}
>
   <p>
      {t.accountQuestion}
      <a href={getRelativeLocaleUrl(Astro.currentLocale ?? 'en', 'signup')}>{t.signUp}</a>
   </p>
   <LogInForm client:load t={t.logInFormTranslation} />
</FormLayout>

<style>
   a {
      color: #016BF8;
   }
</style>
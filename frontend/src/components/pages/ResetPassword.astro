---
import ResetPasswordTranslation from '@/assets/i18n/pages/ResetPassword.json'
import { ResetPasswordForm } from "@/components/security/ResetPasswordForm"
import FormLayout from "@/layouts/FormLayout.astro"
import type { LocalesString } from "@/types"

interface Props {
   locale: LocalesString
}

const { locale } = Astro.props
const t = ResetPasswordTranslation[locale]
---

<FormLayout
   title={t.seo.title}
   description={t.seo.description}
   activeLink=""
   h1Text={t.title}
>
   <ResetPasswordForm client:load t={{
      submit: t.submit,
      labels: t.labels,
      responses: t.responses,
      errors: t.errors,
      resend: {
         resendButton: t.resend.resendButton,
         SUCCESS: t.resend.SUCCESS
      }
   }} />
</FormLayout>
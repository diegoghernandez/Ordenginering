---
import { ShoppingCart } from '../components/ShoppingCart';
import '../index.css'

interface Props {
	title: string;
}

const { title } = Astro.props;

const pages = [
	{ name: 'Home', link: '/'},
	{ name: 'Menu', link: '/menu'},
	{ name: 'Customize', link: '/customize/empty'}
]

const socialLinks = [
	{ name: 'Personal', link: 'https://diegoj4v.github.io/My-website'},
	{ name: 'Github', link: 'https://github.com/DiegoJ4V'},
	{ name: 'LinkedIn', link: 'https://www.linkedin.com/in/diegoj4v/'}
]
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		{/*<ViewTransitions fallback="animate" /> */}
	</head>
	<body>
		<nav>
			<div>
				{pages.map((page) => (
					<a class="container" href={page.link}>
						{page.name}
					</a>
				))}
			</div>
			<div>
				<ShoppingCart client:idle transition:persist />
			</div>
		</nav>
		<slot />
		<footer>
			{socialLinks.map((socialLink) => (
				<a class="container" href={socialLink.link}>
					{socialLink.name}
				</a>
			))}			
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	* {
		box-sizing: border-box;
		padding: 0;
		margin: 0;
	}
	html {
		font-family: system-ui, sans-serif;
	}
	nav {
		display: flex;
		height: 50px;
		padding: 4px 8px;
		justify-content: space-between;
		background-color: #FF8B2E;
		& div {
			display: inline-flex;
			gap: 16px;
		}
	}
	footer {
		display: flex;
		justify-content: center;
		gap: 32px;
		background-color: #FF8B2E;
		padding: 12px 0;
	}
	a {
		display: block;
		height: fit-content;
		cursor: pointer;
		background-color: #FCEB74;
		text-align: center;
		color: #000;
		text-decoration: none;
	}
</style>
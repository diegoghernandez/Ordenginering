---
import { Image } from "astro:assets"
import { AddPizza } from "../components/AddPizza/index.tsx"
import Layout from "../layouts/Layout.astro"
import PizzaList from "../data/pizza.json"
import { Quantity } from "../constants/quantity";
import { Size } from "../constants/size";

---

<Layout title="Menu page">
	<main>
		<h1>Menu</h1>
		{PizzaList.map((pizza) => (
			<article class="container">
				<figure>
					<Image 
						src={`/images/pizza/${pizza.image.url}.jpg`}
						alt={`${pizza.name} pizza`}
						width="280"
						height="220"
						transition:name={`image-${pizza.name.replace(' ', '-').toLowerCase()}`}
					/>
					<figcaption>{pizza.image.author}</figcaption>
				</figure>
				<h2>{pizza.name}</h2>
				<p>{pizza.ingredients.join(', ')}</p>
				<div class="button-container">
					<p style="display: none;">{pizza.ingredients.join(', ')}</p>
					<AddPizza client:idle pizza={{
						pizzaName: pizza.name,
						size: Size.MEDIUM,
						quantity: 1,
						ingredientNameDtoList: pizza.ingredients.map(
							(ingredient) => ({ name: ingredient, quantity: Quantity.NORMAL }))
					}} />
					<a class="container" href={`/customize/${pizza.name.replace(' ', '-').toLowerCase()}`}>Personalizar</a>
				</div>
			</article>
		))}
	</main>
</Layout>

<style>
	main {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: center;
		align-items: center;
		gap: 12px;
		padding: 12px 16px;
		width: 100%;
		& h1 {
			width: 100%;
			text-align: center;
		}
		& article {
			display: flex;
			flex-direction: column;
			gap: 4px;
			min-width: 280px;
			width: 100%;
			max-width: 300px;
			min-height: 444px;
			padding: 12px 16px;
			background-color: #FFC345;
			& img {
				width: 100%;
				height: 220px;
			}
			& h2 {
				text-align: center;
			}
			& p {
				text-align: center;
			}
			& .button-container {
				display: flex;
				flex-direction: column;
				gap: 8px;
				margin-top: auto;
			}
		}
	}
	
</style>